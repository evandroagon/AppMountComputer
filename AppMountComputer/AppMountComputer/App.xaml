<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMountComputer.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="MainColor">#F29100</Color>
            <Color x:Key="MainBarTextColor">White</Color>
            <Color x:Key="MainButtonTextColor">White</Color>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource MainColor}" />
                <Setter Property="BarTextColor" Value="{StaticResource MainBarTextColor}" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource MainColor}" />
                <Setter Property="TextColor" Value="{StaticResource MainButtonTextColor}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>